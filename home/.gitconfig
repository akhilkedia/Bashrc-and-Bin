[user]
	name = Akhil Kedia
	email = akhil.kedia@samsung.com
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[credential]
	helper = store
[core]
	excludesfile = ~/.gitignore
	checkStat = minimal
	trustctime = false
	untrackedCache = true
[diff]
	guitool = default-difftool
	tool = default-difftool
	renames = copies
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[difftool]
	prompt = false
[push]
	default = current
[pull]
    rebase = false

